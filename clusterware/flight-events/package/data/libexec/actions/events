# vim: set filetype=sh :
action=$1
shift
cw_BINNAME="${cw_BINNAME} $(basename "$0")"

case $action in
    h|he|hel|help)
        exec /bin/bash ${cw_ROOT}/libexec/events/actions/help "$@"
        ;;
    j|jo|joi|join)
        exec /bin/bash ${cw_ROOT}/libexec/events/actions/join "$@"
        ;;
    le|lea|leav|leave)
        exec /bin/bash ${cw_ROOT}/libexec/events/actions/leave "$@"
        ;;
    t|tr|tri|trig|trigg|trigge|trigger)
        exec /bin/bash ${cw_ROOT}/libexec/events/actions/trigger "$@"
        ;;
    li|lis|list|liste|listen)
        exec /bin/bash ${cw_ROOT}/libexec/events/actions/listen "$@"
        ;;
    c|co|con|conf|confi|config|configu|configur|configure)
        exec /bin/bash ${cw_ROOT}/libexec/events/actions/configure "$@"
        ;;
    *)
        cat <<EOF
Usage: $cw_BINNAME COMMAND [[OPTION]... [ARGS]]
Perform interactive VNC management activities.

Commands:
EOF
printf "  %-22s  %s\n" "$cw_BINNAME help" "More help about this command."
printf "  %-22s  %s\n" "$cw_BINNAME join" "Join the cluster ring."
printf "  %-22s  %s\n" "$cw_BINNAME leave" "Leave the cluster ring."
printf "  %-22s  %s\n" "$cw_BINNAME trigger" "Trigger an event."
printf "  %-22s  %s\n" "$cw_BINNAME listen" "Add a handler for an event."
printf "  %-22s  %s\n" "$cw_BINNAME configure" "Configure the events service."
cat <<EOF

Please report bugs to support@alces-software.com
Alces Software home page: <http://alces-software.com/>
EOF
esac
